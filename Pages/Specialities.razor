@page "/specialities"

<PageTitle>Specialities</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Specialities" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@specialities"    TItem="HealthcareApp.Models.healthcaredb.Speciality" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="Speciality1" Title="Speciality1">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="Qualifier" Title="Qualifier">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="MinAge" Title="Min Age">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="MaxAge" Title="Max Age">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="BoardCertified" Title="Board Certified">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="SpecialistType" Title="Specialist Type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="ExpirationDate" Title="Expiration Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Property="AcceptingNewPatients" Title="Accepting New Patients">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Speciality" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="speciality">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, speciality)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
