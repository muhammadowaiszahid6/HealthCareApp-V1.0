@page "/organizations"

<PageTitle>Organizations</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Organizations" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@organizations"    TItem="HealthcareApp.Models.healthcaredb.Organization" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="OrganizationName" Title="Organization Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="NPI" Title="N P I">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="AdminName" Title="Admin Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="Phone" Title="Phone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="Extension" Title="Extension">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="Fax" Title="Fax">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="DelegatedCredentialing" Title="Delegated Credentialing">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="RequestDelegatedCredentialing" Title="Request Delegated Credentialing">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="DoNotContact" Title="Do Not Contact">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="NextAuditDate" Title="Next Audit Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="TerminationDate" Title="Termination Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Property="TerminationReason" Title="Termination Reason">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HealthcareApp.Models.healthcaredb.Organization" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="organization">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, organization)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
