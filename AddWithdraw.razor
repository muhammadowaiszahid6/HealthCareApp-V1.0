@page "/add-withdraw"

<PageTitle>Add Withdraw</PageTitle>
<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Withdraw</RadzenAlert>
    <RadzenTemplateForm TItem="App2.Models.healthcaredb.Withdraw" Data="@withdraw" Visible="@(withdraw != null && canEdit)" Submit="@FormSubmit">
       
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="First Name" Component="FirstName" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.FirstName" Name="FirstName" />
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Middle Name" Component="MiddleName" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.MiddleName" Name="MiddleName" />
            </RadzenColumn>
        </RadzenRow>

      
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Last Name" Component="LastName" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.LastName" Name="LastName" />
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="D O B" Component="DOB" style="width: 100%" />
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@withdraw.DOB" Name="DOB" />
            </RadzenColumn>
        </RadzenRow>

      
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="N P I" Component="NPI" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.NPI" Name="NPI" />
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="S S N" Component="SSN" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.SSN" Name="SSN" />
            </RadzenColumn>
        </RadzenRow>

      
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Ethnicity" Component="Ethnicity" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.Ethnicity" Name="Ethnicity" />
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="C A Q H Number" Component="CAQHNumber" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.CAQHNumber" Name="CAQHNumber" />
            </RadzenColumn>
        </RadzenRow>

       
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Withdraw Date" Component="WithdrawDate" style="width: 100%" />
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@withdraw.WithdrawDate" Name="WithdrawDate" />
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Withdraw Reason" Component="WithdrawReason" style="width: 100%" />
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@withdraw.WithdrawReason" Name="WithdrawReason" />
            </RadzenColumn>
        </RadzenRow>

    
        <RadzenRow style="margin-top: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
            </RadzenColumn>
        </RadzenRow>
    </RadzenTemplateForm>
</RadzenColumn>
